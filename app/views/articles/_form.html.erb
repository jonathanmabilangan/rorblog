<%=render 'header'%>
<div class="container">
  <%= form_with model: @article, local: true do |form| %>
    <% if @article.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= pluralize(@article.errors.count, "error") %> prohibited
          this article from being saved:
        </h2>
        <ul>
          <% @article.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  <%end%>
  <p>
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control", placeholder: "Title of the article", autofocus: true %>
  </p>
  <p>
    <%= form.label :text %>
    <%= form.text_area :text, rows: 10, class: "form-control", placeholder: "Body of article" %>
  </p>
  <%= form.submit class: 'btn btn-primary btn-large'%>
  
</div>
